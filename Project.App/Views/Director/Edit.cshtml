@using Project.Entities.Concrete
@model Director

@{
    ViewData["Title"] = "Edit Director";
}

<h2>Edit Director</h2>

<form asp-action="Edit" asp-controller="Director" method="post">
    <input type="hidden" asp-for="DirectorId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
    {
        <div class="alert alert-info mt-2">
            @ViewBag.Message
        </div>
    }
    <div class="form-group">
        <input type="submit" name="Save" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <form asp-action="Delete" asp-controller="Director" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.DirectorId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a href="@Url.Action("Index", "Director")" class="btn btn-primary">Back to List</a>
</div>