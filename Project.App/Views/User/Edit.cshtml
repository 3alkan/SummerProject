@model UserEditViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="Edit" asp-controller="User" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" type="text" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="alert alert-warning mt-3">
        <strong>Note:</strong> If you don't want to change the password, leave the password fields empty.
    </div>

    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Old Password</label>
        <input asp-for="OldPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">New Password</label>
        <input asp-for="NewPassword" class="form-control" type="password" />
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="alert alert-info mt-2">
            @Model.Message
        </div>
    }
    <div class="form-group">
        <input type="submit" name="Save" value="Save" class="btn btn-primary" />
    </div>
</form>

<form asp-action="Delete" asp-controller="User" method="post" class="d-inline">
    <input type="hidden" name="id" value="@Model.UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a href="@Url.Action("Details", "User",new{id=@Model.UserId})" class="btn btn-secondary">Back to Details</a>
<a href="@Url.Action("Index", "User")" class="btn btn-secondary">Back to List</a>
