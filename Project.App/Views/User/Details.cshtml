@model Project.Entities.Concrete.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Username</dt>
        <dd>@Model.Username</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Update", "User", new { id = Model.UserId })" class="btn btn-warning">Edit</a>
    <form asp-action="Delete" asp-controller="User" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.UserId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a href="@Url.Action("Index", "User")" class="btn btn-primary">Back to List</a>
</div>
