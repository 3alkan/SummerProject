@using Project.Entities.Concrete
@model IEnumerable<User>

@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

<p>
    <a href="@Url.Action("Add", "User")" class="btn btn-primary">Add New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Details", "User", new { id = user.UserId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Update", "User", new { id = user.UserId })" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-controller="User" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@user.UserId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
